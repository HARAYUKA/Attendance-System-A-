<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">【からの勤怠変更申請】</h1>
    </div>
    <div class="modal-body">
      <%= form_with(model: @attendance, url: update_notice_overwork_user_attendances_path(@user), local: true, method: :patch) do |f| %>
        <% @notice_users.each do |user| %>
          <table class="table table-bordered table-overwork">
            <thead>
              <tr>
                <th>日付</th>
                <th>曜日</th>
                <th>終了予定時間</th>
                <th>指定勤務終了時間</th>
                <th>時間外残業</th>
                <th>業務処理内容</th>
                <th>指示者確認㊞</th>
                <th>変更</th>
                <th>勤怠を確認する</th>
              </tr>
            </thead>
            
            <% @attendance_notices = Attendance.where(user_id: user.id).where.not(endtime_at: nil) %>
            <% @attendance_notices.each do |notice| %>
              <tbody>
                <tr>
                  <td><%= l(notice.worked_on, format: :short) %></td>
                  <td><%= $days_of_the_week[notice.worked_on.wday] %></td>
                  <td>
                    <% if notice.tommorow_index == true %>
                      <%= notice.endtime_at.tomorrow.strftime("%H") if notice.endtime_at.present? %>
                    <% else %>
                      <%= notice.endtime_at.strftime("%H") if notice.endtime_at.present? %>
                    <% end %>
                  </td>
                  <td><%= format_basic_info(@user.work_end_time) %></td>
                  <td>
                    <% if notice.endtime_at.present? && notice.finished_at.present? %>
                      <%= format("%.2f", Time.at(work_end_time(notice)).utc.strftime('%H')) %>
                    <% end %>
                  </td>
                  <td><%= notice.try(:overtime_memo) %></td>
                  <td><%= f.select :confirm, Attendance.confirms.keys.to_a, include_blank: true %></td>
                  <td><%= f.check_box :change, {class: "change"}, 'true', 'false' %></td>
                  <td><%= link_to "確認", "#", class: "btn btn-primary btn-md" %></td>
                </tr>
              </tbody>
            <% end %>
          </table>
        <% end %>
      <% end %>
  </div>
</div>
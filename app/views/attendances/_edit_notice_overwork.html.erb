<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">【からの勤怠変更申請】</h1>
    </div>
    <div class="modal-body">
      <%= form_with(model: @attendance, url: update_notice_overwork_user_attendances_path(@user), local: true, method: :patch) do |f| %>
        <table class="table table-bordered table-overwork">
          <% @notice_users.each do |user| %>
            <thead>
              <tr>
                <th>日付</th>
                <th>曜日</th>
                <th>終了予定時間</th>
                <th>指定勤務終了時間</th>
                <th>時間外残業</th>
                <th>業務処理内容</th>
                <th>指示者確認㊞</th>
                <th>変更</th>
                <th>勤怠を確認する</th>
              </tr>
            </thead>
            
            <% @attendance_notices = Attendance.where(user_id: user.id).where.not(scheduled_end_time: nil) %>
            <% @attendance_notices.each do |notice| %>
              <tbody>
                <tr>
                  <td><%= l(notice.worked_on, format: :short) %></td>
                  <td><%= $days_of_the_week[notice.worked_on.wday] %></td>
                  <td>
                    <!--< % if next_day == true %>-->
                    <!--  < %= notice.scheduled_end_time.tomorrow.strftime("%H") if notice.scheduled_end_time.present? %>-->
                    <!--< % else %>-->
                    <!--  < %= notice.scheduled_end_time.strftime("%H") if notice.scheduled_end_time.present? %>-->
                    <!--< % end %>-->
                  </td>
                  <td><%= format_basic_info(@user.work_end_time) %></td>
                  <td>
                    <% if notice.scheduled_end_time.present? && notice.finished_at.present? %>
                      <%= overtime_info(notice.scheduled_end_time, @user.work_end_time, day.next_day) %>
                    <% end %>
                  </td>
                  <td><%= notice.try(:work_details) %></td>
                  <td><%= f.select :overwork_request_status, [['なし'],['申請中'],['承認'],['否認']], {}, { class: "confirmation" }, include_blank: true %></td>
                  <td><%= f.check_box :change, class: "change" %></td>
                  <td><%= link_to "確認", "#", class: "btn btn-primary btn-md" %></td>
                </tr>
              </tbody>
            <% end %>
          <% end %>
        </table>
      <% end %>
    </div>
  </div>
</div>
<% provide(:title, 'All Users') %>
<h1>ユーザー一覧</h1>

  <%= form_tag "#", multipart: true do %>
    <%= file_field_tag :file %>
    <%= link_to "CSVをインポート", "#", class: "btn btn-primary" %>
  <% end %>

<table class="table">
  <% @users.each do |user| %>
    <tr>
      <td>
        <div class="col-md-15">
        <% if current_user.admin? && !current_user?(user) %>
        <%= user.name %><br>
          <%= link_to "削除", user, method: :delete,
              data: { confirm: "削除してよろしいですか？" },
              class: "btn btn-primary btn-default" %><br>
          <div class="panel-group">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <a data-toggle="collapse" data-parent="#accordion" href="#collapse1<%= user.id %>"><button type="submit" class="btn btn-primary">編集</button></a>
                </h4>
              </div>
              <div id="collapse1<%= user.id %>" class="panel-collapse collapse">
                <div class="panel-body"><%= render 'users/form1', locals:{ user: user} %></div>
              </div>
            </div>
          </div>
        <% end %>
        </div>
      </td>
    </tr>
  <% end %>
</table>

<!--モーダルウインドウ表示-->
<div id="edit-basic-info" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
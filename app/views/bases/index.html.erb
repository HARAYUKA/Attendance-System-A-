<% provide(:title, 'Base-Index') %>

<h1>拠点一覧</h1>

<div class="col-md-10 col-md-offset-1">
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <th></th>
      <th></th>
      <th>拠点番号</th>
      <th>拠点名</th>
      <th>勤怠種類</th>
    </tr>
    
    <% @bases.each do |base| %>
      <tr>
        <td><%= link_to "編集", edit_basis_path(base), class: "btn btn-primary" %></td>
        <td><%= link_to "削除", basis_path(base), method: :delete, class: "btn btn-primary", data: {confirm: "削除してよろしいですか？" } %></td>
        <td><%= base.base_number %></td>
        <td><%= base.base_name %></td>
        <td><%= base.base_type %></td>
      </tr>
    <% end %>
  </table>
  <%= link_to "拠点情報追加", new_basis_path, class: "btn btn-lg btn-primary" %>
</div>